{% extends 'base.html.twig' %}

{% block title %}Dog index{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between">
        <h1>Dog list</h1>
        <div>
            <a href="{{ path('dog_new') }}" class="btn btn-primary">Create new</a>
        </div>
    </div>

    <table class="table">
        <thead>
        <tr>
            <th>Name</th>
            <th>Race</th>
            <th>Birthday</th>
            <th>Background color</th>
            <th>Text color</th>
            <th>Owner</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for dog in dogs %}
            <tr>
                <td>{{ dog.name }}</td>
                <td>{{ dog.breed }}</td>
                <td>{{ dog.backgroundColor }}</td>
                <td>{{ dog.textColor }}</td>
                <td>{{ dog.birthday ? dog.birthday|date('Y-m-d') : '' }}</td>
                <td>{% if dog.owner %}<a href="{{ path('owner_show', {id: dog.owner.id}) }}">{{ dog.owner.name }}</a>{% endif %}</td>
                <td>
                    <a href="{{ path('dog_show', {'id': dog.id}) }}">show</a>
                    <a href="{{ path('dog_edit', {'id': dog.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
