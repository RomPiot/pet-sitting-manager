{% extends 'base.html.twig' %}

{% block title %}Propriétaire{% endblock %}

{% block body %}
    <h1>Propriétaire</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Nom</th>
            <td>{{ owner.name }}</td>
        </tr>
        <tr>
            <th>Adresse</th>
            <td>{{ owner.address }}</td>
        </tr>
        <tr>
            <th>Contacts</th>
            <td>{{ owner.contacts ? owner.contacts|json_encode : '' }}</td>
        </tr>
        </tbody>
    </table>

    <div class="d-flex justify-content-center">
        <a href="{{ path('owner_list') }}" class="btn btn-outline-secondary me-2">Retour</a>
        <a href="{{ path('owner_edit', {'id': owner.id}) }}" class="btn btn-primary ms-2">Modifier</a>
    </div>
{% endblock %}
